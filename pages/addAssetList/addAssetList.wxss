/* pages/addAssetList/addAssetList.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.scroll{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.topSearch{
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.searchInput{
  width: 400rpx;
  height: 60rpx;
  border: 1px solid #00BFFF;
  border-right: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx 0 0 10rpx;
  font-size: 25rpx;
}
.searchBtn{
  background-color: #00BFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 10rpx 10rpx 0;
  width: 150rpx;
  height: 60rpx;
}
.searchIcon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.searchWord{
  color: #ffffff;
  font-size: 25rpx;
  font-family: PingFang;
  font-weight: bold;
}

.assetCont{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}
.checkState{
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid #dddddd;
  border-radius: 50%;
  margin-right: 20rpx;
}
.deviceMess{
  background-color: #ffffff;
  border-radius: 30rpx;
  width: 640rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.deviceTop{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dddddd;
  padding-bottom: 10rpx;
}
.header{
  width: 100rpx;
  height: 100rpx;
}
.deviceName{
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}
.name{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  margin-bottom: 20rpx;
}
.model{
  font-size: 20rpx;
  color: #999999;
  width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}
.status{
  font-size: 25rpx;
  background-color: red;
  color: #ffffff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.ddeviceBot{
  font-size: 30rpx;
  color: #999999;
  padding-top: 10rpx;
}
.depart,.place{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

.addReceive{
  width: 100%;
  height: 100rpx;
  background-color: #8470FF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addLeft,.addRig{
  font-size: 30rpx;
  color: #ffffff;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-right: 2rpx solid #ffffff;
  box-sizing: border-box;
}