/* pages/receive/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.cont{
  width: 100%;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.contTopAll{
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #dddddd;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.coderState{
  font-size: 30rpx;
  color: #ffffff;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  background-color: red;
}
.contMiddle{
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #dddddd;
}
.order{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.topText1{
  font-size: 30rpx;
  color: #666666;
  margin-right: 30rpx;
}
.topText2{
  font-size: 30rpx;
  color: #999999;
  width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

.contMiddle{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.nameKey,.numberKey,.leftKey,.rigKey{
  font-size: 25rpx;
  color: #999999;
  margin-bottom: 30rpx;
}
.middleLeft,.middleRig{
  width: 375.5rpx;
}
.middleRig{
  padding-left: 50rpx;
  box-sizing: border-box;
}
.line{
  width: 2rpx;
  height: 75rpx;
  background-color: #999999;
}

.contBot{
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.botLeft,.botRig{
  width: 50%;
}
.nameValue,.numberValue,.leftValue,.rigValue{
  width: 95%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  font-size: 35rpx;
  color: #333333;
}
.scanIcon{
  width: 40rpx;
  height: 40rpx;
}
.addReceive{
  width: 100%;
  height: 100rpx;
  background-color: #8470FF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addLeft{
  font-size: 30rpx;
  color: #ffffff;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-right: 2rpx solid #ffffff;
  box-sizing: border-box;
}
.addRig{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 60rpx;
}